        private static void OutputToFile(string[] filteredWords)
        {
            File.WriteAllLines(@"C:\WTH\dollarWords.txt",filteredWords);

        }

        public static string[] GetWordsFromFile(string filePathName)
        {
            List<string> allWords = new List<string>();
            using (StreamReader file = new StreamReader(filePathName)) { 
            while (!file.EndOfStream)
            {
                allWords.Add(file.ReadLine());
            }
            return allWords.ToArray();
        }
        }

        //does the acatual checking
        public static string[] FilterWords(String[] words, int WordCountValue)
        {
            List<string> results = new List<string>();
           // System.IO.StreamReader file = new System.IO.StreamReader(@FilePathName);
            foreach (var word in words)
            {
               // String Words = file.ReadLine();
                int price = CountingLetters(word);
                //Console.WriteLine(Words);
                if (price == WordCountValue)
                {
                    results.Add(word);
                }
            }

            return results.ToArray();
        }

        public static int CountingLetters(String word)
        {
            int WordCountAmount = 0;
            if (word == null)
            {
                return 0;
            }
            foreach (char c in word)
            {
                if (c == 'A' || c == 'a')
                {
                    WordCountAmount += 1;
                }
                if (c == 'B' || c == 'b')
                {
                    WordCountAmount += 2;
                }
                if (c == 'C' || c == 'c')
                {
                    WordCountAmount += 3;
                }
                if (c == 'D' || c == 'd')
                {
                    WordCountAmount += 4;
                }
                if (c == 'E' || c == 'e')
                {
                    WordCountAmount += 5;
                }
                if (c == 'F' || c == 'f')
                {
                    WordCountAmount += 6;
                }
                if (c == 'G' || c == 'g')
                {
                    WordCountAmount += 7;
                }
                if (c == 'H' || c == 'h')
                {
                    WordCountAmount += 8;
                }
                if (c == 'I' || c == 'i')
                {
                    WordCountAmount += 9;
                }
                if (c == 'J' || c == 'j')
                {
                    WordCountAmount += 10;
                }
                if (c == 'K' || c == 'k')
                {
                    WordCountAmount += 11;
                }
                if (c == 'L' || c == 'l')
                {
                    WordCountAmount += 12;
                }
                if (c == 'M' || c == 'm')
                {
                    WordCountAmount += 13;
                }
                if (c == 'N' || c == 'n')
                {
                    WordCountAmount += 14;
                }
                if (c == 'O' || c == 'o')
                {
                    WordCountAmount += 15;
                }
                if (c == 'P' || c == 'p')
                {
                    WordCountAmount += 16;
                }
                if (c == 'Q' || c == 'q')
                {
                    WordCountAmount += 17;
                }
                if (c == 'R' || c == 'r')
                {
                    WordCountAmount += 18;
                }
                if (c == 'S' || c == 's')
                {
                    WordCountAmount += 19;
                }
                if (c == 'T' || c == 't')
                {
                    WordCountAmount += 20;
                }
                if (c == 'U' || c == 'u')
                {
                    WordCountAmount += 21;
                }
                if (c == 'V' || c == 'v')
                {
                    WordCountAmount += 22;
                }
                if (c == 'W' || c == 'w')
                {
                    WordCountAmount += 23;
                }
                if (c == 'X' || c == 'x')
                {
                    WordCountAmount += 24;
                }
                if (c == 'Y' || c == 'y')
                {
                    WordCountAmount += 25;
                }
                if (c == 'Z' || c == 'z')
                {
                    WordCountAmount += 26;
                }
                //Console.WriteLine(c);
            }
            return WordCountAmount;
            //if (WordCountValue == WordCountAmount)
            //{


